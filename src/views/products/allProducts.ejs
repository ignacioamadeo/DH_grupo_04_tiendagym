                                            <button type="submit">ELIMINAR</button>
                                        </form>
                                    </article>
                                    <% } %>
                                        <% }); %>
                        </section>
  
                </main>
                <%- include('../partials/footer') %>
                    <script src="/js/home.js"> </script>
