<!DOCTYPE html>
<html lang="en">

<!-- Header importado -->
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

            <!--Main -->
            <main class="webAdmin">
                <section class="homeGrillaProductos">
                    <article>
                        <img src="./images/pexels-life-of-pix-8264.jpg" class="imagenesCategorias">
                        <ul>
                            <a href="./productIndex">
                                <li>Sistema de gestión de productos</li>
                                <li>Carga de nuevos productos</li>
                            </a>
                        </ul>
                    </article>
                </section>
                <section class="formNewProduct">
                    <form action="/newProduct" method=POST>

                        <label for="prodNombre">Nombre de producto</label>
                        <input type="text" name="prodNombre" id="prodNombre" placeholder="Cinta de correr CYNT 234rpm">

                        <label for="prodDescripcion">Descripción</label>
                        <textarea name="prodDescripcion"
                            id="prodDescripcion">Escribir descripción del producto...</textarea>

                        <label for="prodFotos">Cargar fotos producto:</label>
                        <input type="file" name="prodFotos" accept=".jpg" multiple>

                        <label for="prodCategoria">Categoría:</label>
                        <select name="prodCategoria">
                            <option value="#funcPilYog">Funcional, pilates y yoga</option>
                            <option value="#PesDisBar">Pesas, discos y barras</option>
                            <option value="#Maq">Máquinas</option>
                            <option value="#Ind">Indumentaria</option>
                        </select>

                        <label>Precio</label>
                        <input type="text" name="prodPrecio" placeholder="$20.000">

                        <label>Descuento</label>
                        <input type="text" name="prodDescuento" placeholder="%25">

                        <label>Envío gratis</label>
                        <input type="checkbox" name="envioGratis" value="envioGratisSi">

                        <button type="borrar">Resetear formulario</button>
                        <button type="guardar">Guardar producto</button>
                    </form>
                </section>
            </main>
            <!-- Footer importado -->
            <%- include('./partials/footer') %>
    </body>


</html>